@model IEnumerable<ProjetoDeBloco.Aplicacao.ViewModels.CursoVM>

@{
    ViewBag.Title = "Listagem de Cursos";
}

<ol class="breadcrumb">
    <li>@Html.ActionLink("Home", "Index", "Home")</li>
    <li class="active">@ViewBag.Title</li>
</ol>


<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Novo Curso", "Cadastro", null, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            Código - Nome
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td class="col-lg-9">
                @Html.DisplayFor(modelItem => item.CodigoENome)
            </td>
            <td>
                @Html.ActionLink("Editar", "Editar", new { id = item.Id }, new { @class = "btn btn-default btn-sm" }) 
                @Html.ActionLink("Visualizar", "Visualizar", new { id = item.Id }, new { @class = "btn btn-default btn-sm" }) 
                @Html.ActionLink("Remover", "Remover", new { id = item.Id }, new { @class = "btn btn-danger btn-sm" })
            </td>
        </tr>
    }
</table>
